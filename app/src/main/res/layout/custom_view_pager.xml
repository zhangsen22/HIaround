<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y78"
        android:text="选择支付方式"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/y40"
        android:gravity="center_vertical"/>

    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y78"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/y40"
        android:paddingRight="@dimen/y26"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/y34"
            android:layout_height="@dimen/y34"
            android:src="@mipmap/h" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:textColor="@color/color_666666"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/y16"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <CheckBox
            android:id="@+id/cb_webchat"
            style="@style/CustomCheckboxTheme2" />

    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y78"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/y40"
        android:paddingRight="@dimen/y26"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/y34"
            android:layout_height="@dimen/y34"
            android:src="@mipmap/f" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:textColor="@color/color_666666"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/y16"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <CheckBox
            android:id="@+id/cb_idcast"
            style="@style/CustomCheckboxTheme2" />

    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y78"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/y40"
        android:paddingRight="@dimen/y26"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/y34"
            android:layout_height="@dimen/y34"
            android:src="@mipmap/af" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云闪付"
            android:textColor="@color/color_666666"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/y16"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <CheckBox
            android:id="@+id/cb_yunshanfu"
            style="@style/CustomCheckboxTheme2" />

    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y78"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/y40"
        android:paddingRight="@dimen/y26"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/y34"
            android:layout_height="@dimen/y34"
            android:src="@mipmap/aq" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拉卡拉"
            android:textColor="@color/color_666666"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/y16"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <CheckBox
            android:id="@+id/cb_lacara"
            style="@style/CustomCheckboxTheme2" />

    </LinearLayout>

</LinearLayout>