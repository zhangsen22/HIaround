<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/corners_bg6"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/y36"
    android:paddingRight="@dimen/y36">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_666666"
        android:textSize="12sp"
        android:text="支  付"
        android:layout_marginTop="@dimen/y28"
        android:layout_marginBottom="@dimen/y26"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@mipmap/l"
        android:layout_marginLeft="@dimen/y30"
        android:layout_marginRight="@dimen/y30"/>

    <TextView
        android:id="@+id/tv_despic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ff5100"
        android:textSize="10sp"
        android:layout_marginLeft="@dimen/y62"
        android:layout_marginRight="@dimen/y62"
        android:layout_marginTop="@dimen/y28"
        android:text="若扫描二维码支付失败请复制账号进行转账"/>

    <ImageView
        android:id="@+id/iv_image_code"
        android:layout_width="@dimen/y374"
        android:layout_height="@dimen/y374"
        android:layout_marginTop="@dimen/y40"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_666666"
        android:textSize="10sp"
        tools:text="账号：15656588896"
        android:layout_marginTop="@dimen/y26" />

    <TextView
        android:id="@+id/tv_pay_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_666666"
        android:textSize="10sp"
        tools:text="请用支付宝扫一扫"
        android:layout_marginTop="@dimen/y16"
        android:layout_marginBottom="@dimen/y22"/>

</LinearLayout>