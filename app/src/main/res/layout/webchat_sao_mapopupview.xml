<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/corners_bg6"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:text="请扫码完成绑定"
        android:layout_marginTop="@dimen/y48" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@mipmap/l"
        android:layout_marginLeft="@dimen/y30"
        android:layout_marginRight="@dimen/y30"
        android:layout_marginTop="@dimen/y24"/>

    <ImageView
        android:id="@+id/iv_image_code"
        android:layout_width="@dimen/y296"
        android:layout_height="@dimen/y296"
        android:layout_marginTop="@dimen/y64"
        android:layout_marginRight="@dimen/y144"
        android:layout_marginLeft="@dimen/y144"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_ok_sao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/n"
        android:layout_gravity="center_horizontal"
        android:text="已完成扫码"
        android:gravity="center"
        android:textColor="@color/common_white"
        android:textSize="15sp"
        android:paddingBottom="@dimen/y10"
        android:layout_marginTop="@dimen/y30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ff5100"
        android:textSize="12sp"
        android:text="请使用微信扫一扫直接扫码"
        android:layout_marginTop="@dimen/y40"
        android:layout_marginBottom="@dimen/y36"/>

</LinearLayout>