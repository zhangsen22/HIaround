<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/y44"
    android:layout_marginRight="@dimen/y44"
    android:background="@drawable/corners_bg20x">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买金额"
        android:textColor="@color/color_333333"
        android:textSize="13sp"
        android:layout_marginLeft="@dimen/y44"
        android:layout_marginTop="@dimen/y30"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_buy_recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y4"
        android:layout_marginLeft="@dimen/y36"
        android:layout_marginRight="@dimen/y38"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="#00000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@mipmap/l"
        android:layout_marginTop="@dimen/y40"
        android:layout_marginLeft="@dimen/y30"
        android:layout_marginRight="@dimen/y30"/>

    <LinearLayout
        android:id="@+id/ll_choose_paytype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/y44"
        android:layout_marginRight="@dimen/y44"
        android:layout_marginTop="@dimen/y28"
        android:layout_marginBottom="@dimen/y30"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择支付方式"
            android:textColor="@color/color_333333"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_pay_icon"
            android:layout_width="@dimen/y26"
            android:layout_height="@dimen/y26"
            android:src="@mipmap/h" />

        <TextView
            android:id="@+id/iv_pay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:textColor="@color/color_333333"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/y12"/>

        <ImageView
            android:layout_width="@dimen/y12"
            android:layout_height="@dimen/y20"
            android:src="@mipmap/y"
            android:layout_marginLeft="@dimen/y16"/>

    </LinearLayout>

</LinearLayout>

    <TextView
        android:id="@+id/go_buy"
        android:text="购买"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/cl"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y32"
        android:gravity="center"
        android:textColor="@color/common_white"
        android:textSize="16sp"
        android:paddingBottom="@dimen/y10" />

</LinearLayout>