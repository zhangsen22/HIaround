<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y78"
        android:text="选择收款方式"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/y40"
        android:gravity="center_vertical"/>

    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y78"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/y40"
        android:paddingRight="@dimen/y26"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/y34"
            android:layout_height="@dimen/y34"
            android:src="@mipmap/f" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡 (推荐)"
            android:textColor="@color/color_666666"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/y16"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去绑定"
                android:textColor="@color/color_ff5100"
                android:textSize="10sp"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/cb_bank"
                style="@style/CustomCheckboxTheme2"
                android:visibility="gone"/>

        </FrameLayout>

    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y78"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/y40"
        android:paddingRight="@dimen/y26"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/y34"
            android:layout_height="@dimen/y34"
            android:src="@mipmap/h" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:textColor="@color/color_666666"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/y16"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_webchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去绑定"
                android:textColor="@color/color_ff5100"
                android:textSize="10sp"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/cb_webchat"
                style="@style/CustomCheckboxTheme2"
                android:visibility="gone"/>

        </FrameLayout>

    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y78"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/y40"
        android:paddingRight="@dimen/y26"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/y34"
            android:layout_height="@dimen/y34"
            android:src="@mipmap/g" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textColor="@color/color_666666"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/y16"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y1"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_alpiy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去绑定"
                android:textColor="@color/color_ff5100"
                android:textSize="10sp"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/cb_alpiy"
                style="@style/CustomCheckboxTheme2"
                android:visibility="gone"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>