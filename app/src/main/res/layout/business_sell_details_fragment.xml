<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_f9f9f9">

    <include layout="@layout/title"/>

    <include layout="@layout/line"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y138"
                android:orientation="vertical"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请放行"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp"
                    android:gravity="center"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/y1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在"
                        android:textColor="@color/color_666666"
                        android:textSize="10sp"
                        android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_count_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="14.59"
                    android:textColor="@color/color_ff5100"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分钟后可申诉"
                    android:textColor="@color/color_666666"
                    android:textSize="10sp"
                    android:gravity="center"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买家已付款请放行"
                    android:textColor="@color/color_666666"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/y28"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:background="@color/common_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号  :  "
                    android:textColor="@color/color_666666"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_order_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="798456498789465"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已付款"
                    android:textColor="@color/color_ff5100"
                    android:textSize="10sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:background="@color/common_white"
                android:layout_marginTop="@dimen/y20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请查收对方付款"
                    android:textColor="@color/color_666666"
                    android:textSize="11sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:id="@+id/tv_pay_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="¥100.00"
                    android:textColor="@color/color_ff5100"
                    android:textSize="14sp"
                    android:gravity="center"/>

            </LinearLayout>

            <include layout="@layout/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:background="@color/common_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易单价"
                    android:textColor="@color/color_666666"
                    android:textSize="11sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:id="@+id/tv_biusness_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="¥6.12"
                    android:textColor="@color/color_666666"
                    android:textSize="11sp"
                    android:gravity="center"/>

            </LinearLayout>

            <include layout="@layout/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:background="@color/common_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易数量"
                    android:textColor="@color/color_666666"
                    android:textSize="11sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:id="@+id/tv_biusness_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="53.59685"
                    android:textColor="@color/color_666666"
                    android:textSize="11sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usdt"
                    android:layout_marginLeft="@dimen/y6"
                    android:textColor="@color/color_666666"
                    android:textSize="11sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:orientation="horizontal"
                android:background="@color/common_white"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/y20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卖家"
                    android:textColor="@color/color_666666"
                    android:textSize="11sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:id="@+id/tv_sell_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="专业买卖2018"
                    android:textColor="@color/color_666666"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bj"
                    android:layout_marginLeft="@dimen/y10"/>

            </LinearLayout>

            <include layout="@layout/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:orientation="horizontal"
                android:background="@color/common_white"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下单时间"
                    android:textColor="@color/color_666666"
                    android:textSize="11sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:id="@+id/tv_sell_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2017-12-15 13:56:32"
                    android:textColor="@color/color_666666"
                    android:textSize="11sp" />

            </LinearLayout>

            <include layout="@layout/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:orientation="horizontal"
                android:background="@color/common_white"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参考码"
                    android:textColor="@color/color_666666"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bi"
                    android:layout_marginLeft="@dimen/y12"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y1"/>

                <TextView
                    android:id="@+id/tv_shoukuai_cankaoma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="98171"
                    android:textColor="@color/color_666666"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bh"
                    android:layout_marginLeft="@dimen/y10"/>

            </LinearLayout>

            <include layout="@layout/a2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·订单状态变更为买方已付款后，请前往收款账户核实是否收到款项后尽快放币。\n·用户需自行承担交易风险，造成损失与Gmix平台无关"
                android:textColor="@color/color_999999"
                android:textSize="10sp"
                android:lineSpacingExtra="@dimen/y6"
                android:layout_marginTop="@dimen/y28"
                android:layout_marginLeft="@dimen/y26"
                android:layout_marginRight="@dimen/y26"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/y26"
                android:paddingRight="@dimen/y26"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/y20">

                <CheckBox
                    android:id="@+id/cb_sell_agree"
                    style="@style/CustomCheckboxTheme2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已确认收到付款"
                    android:textColor="@color/color_666666"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_sell_recive_monery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1999"
                    android:textColor="@color/color_ff5100"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cny"
                    android:textColor="@color/text"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平台提示：数字货币不同于传统货币，一旦转出无法找回！"
                android:textColor="@color/color_ff5100"
                android:textSize="10sp"
                android:layout_marginLeft="@dimen/y26"
                android:layout_marginRight="@dimen/y26"
                android:layout_marginTop="@dimen/y22"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginBottom="@dimen/y20"
                android:paddingLeft="@dimen/y36"
                android:paddingRight="@dimen/y36">

                <TextView
                    android:id="@+id/tv_sell_shensu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bf"
                    android:layout_gravity="center_horizontal"
                    android:text="申  诉"
                    android:gravity="center"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp"
                    android:paddingBottom="@dimen/y10" />

                <View
                    android:layout_width="@dimen/y20"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_sell_fangbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/n"
                    android:layout_gravity="center_horizontal"
                    android:text="放  币"
                    android:gravity="center"
                    android:textColor="@color/common_white"
                    android:textSize="14sp"
                    android:paddingBottom="@dimen/y10" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>