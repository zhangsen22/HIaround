<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_login_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y672"
        android:background="@mipmap/bo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/y144"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/y150"
                android:layout_height="@dimen/y150"
                android:src="@mipmap/cu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U 智交易所"
                android:textColor="@color/common_white"
                android:textSize="30sp"
                android:layout_marginTop="@dimen/y60"
                android:textStyle="bold"/>

        </LinearLayout>

    </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_login_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y450"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/ci"
                android:orientation="vertical"
                android:paddingLeft="@dimen/y80"
                android:paddingRight="@dimen/y80">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y90"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/y130"
                    android:background="@drawable/corners_bg10_c5">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/cj"
                        android:layout_marginLeft="@dimen/y50"/>

                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textCursorDrawable="@drawable/my_cursor"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/space_10"
                        android:paddingRight="@dimen/space_10"
                        android:textColorHint="@color/color_c5c5c5"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp"
                        android:hint="请输入您的帐号"
                        android:layout_marginLeft="@dimen/y30"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y90"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/corners_bg10_c5"
                    android:layout_marginTop="@dimen/y40">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ck"
                        android:layout_marginLeft="@dimen/y50"/>

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textCursorDrawable="@drawable/my_cursor"
                        android:inputType="textPassword"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/space_10"
                        android:paddingRight="@dimen/space_10"
                        android:textColorHint="@color/color_c5c5c5"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp"
                        android:hint="请输入您的密码"
                        android:layout_marginLeft="@dimen/y30"/>

                    <ImageView
                        android:id="@+id/iv_eye"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/yincang"
                        android:layout_marginRight="@dimen/y60"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/go_login"
                    android:text="登录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/cl"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/y110"
                    android:gravity="center"
                    android:textColor="@color/common_white"
                    android:textSize="14sp"
                    android:paddingBottom="@dimen/y10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/y36"
                    android:layout_marginRight="@dimen/y36"
                    android:layout_marginTop="@dimen/y60"
                    android:layout_marginBottom="@dimen/y92">

                    <TextView
                        android:id="@+id/go_regist"
                        android:text="注册帐号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/color_333333"
                        android:textSize="11sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/go_forget_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="忘记密码？"
                        android:gravity="center"
                        android:textColor="@color/color_333333"
                        android:textSize="11sp"
                        android:layout_gravity="center" />

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

        </ScrollView>

</FrameLayout>