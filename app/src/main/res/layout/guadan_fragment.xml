<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--如果MagicIndicator需要加背景颜色   需要在其外面嵌套一个父布局  在父布局添加背景颜色-->
    <LinearLayout
        android:id="@+id/ll_guadan_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/ce">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/y92"
            android:layout_height="@dimen/y92"
            android:src="@mipmap/back"
            android:padding="@dimen/y30"/>

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/guadan_magicindicator"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y92"
            android:layout_gravity="center_horizontal"/>

        <View
            android:layout_width="@dimen/y92"
            android:layout_height="@dimen/y92" />

    </LinearLayout>

    <include layout="@layout/line_10_f9"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/guadan_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>