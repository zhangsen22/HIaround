<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_white"
    android:layout_marginBottom="@dimen/y10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y28"
        android:layout_marginLeft="@dimen/y34"
        android:layout_marginBottom="@dimen/y20">

        <ImageView
            android:id="@+id/iv_image_type"
            android:layout_width="@dimen/y34"
            android:layout_height="@dimen/y34"
            tools:src="@mipmap/w"/>

        <TextView
            android:id="@+id/tv_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="充币"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="@dimen/y18"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USDT"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="@dimen/y10"
            android:visibility="gone"/>

    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/y20">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量"
                android:textColor="@color/color_999999"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/y32"/>

            <TextView
                android:id="@+id/tv_amount_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20644.300000"
                android:textColor="@color/color_999999"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/y24"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/y1"
            android:layout_height="@dimen/y54"
            android:src="@mipmap/t"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textColor="@color/color_999999"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/y32"/>

            <TextView
                android:id="@+id/tv_amount_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="确认中"
                android:textColor="@color/color_999999"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/y24"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/y1"
            android:layout_height="@dimen/y54"
            android:src="@mipmap/t"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="@color/color_999999"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/y32"/>

            <TextView
                android:id="@+id/tv_amount_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="17:14 03/31"
                android:textColor="@color/color_999999"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/y24"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line_f9"/>

</LinearLayout>