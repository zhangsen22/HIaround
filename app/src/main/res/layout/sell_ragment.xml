<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/y44"
        android:layout_marginRight="@dimen/y44"
        android:background="@drawable/corners_bg20x">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/y44"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginRight="@dimen/y44"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出售金额"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/y1"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/color_666666"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usdt"
                android:textColor="@color/color_666666"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textColor="@color/color_666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_usdt_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="6.92"
                android:textColor="@color/color_666666"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cny"
                android:textColor="@color/color_666666"
                android:textSize="13sp"
                android:layout_marginRight="@dimen/y30"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y38"
            android:layout_marginLeft="@dimen/y44"
            android:layout_marginRight="@dimen/y44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rmb"
                android:textColor="@color/color_333333"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_sell_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/my_cursor"
                android:inputType="number|numberDecimal"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:textColorHint="@color/color_c5c5c5"
                android:textColor="@color/color_666666"
                android:textSize="15sp"
                android:hint="请输入您的金额"
                android:layout_marginLeft="@dimen/y30"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@mipmap/l"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginLeft="@dimen/y30"
            android:layout_marginRight="@dimen/y30"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y18"
            android:layout_marginLeft="@dimen/y44"
            android:layout_marginRight="@dimen/y44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总量约"
                android:textColor="@color/color_ff5100"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sell_usdtnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/color_ff5100"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USDT"
                android:textColor="@color/color_ff5100"
                android:textSize="12sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@mipmap/l"
            android:layout_marginTop="@dimen/y52"
            android:layout_marginLeft="@dimen/y30"
            android:layout_marginRight="@dimen/y30"/>

        <LinearLayout
            android:id="@+id/ll_choose_paytype1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/y44"
            android:layout_marginRight="@dimen/y44"
            android:layout_marginTop="@dimen/y28"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择支付方式"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/y1"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_sell_icon"
                android:layout_width="@dimen/y26"
                android:layout_height="@dimen/y26"
                android:src="@mipmap/h"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/iv_sell_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择一种收款方式"
                android:textColor="@color/color_333333"
                android:textSize="13sp"
                android:layout_marginLeft="@dimen/y12"/>

            <ImageView
                android:layout_width="@dimen/y12"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/y"
                android:layout_marginLeft="@dimen/y16"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@mipmap/l"
            android:layout_marginTop="@dimen/y28"
            android:layout_marginLeft="@dimen/y30"
            android:layout_marginRight="@dimen/y30"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/y44"
            android:layout_marginRight="@dimen/y44"
            android:layout_marginTop="@dimen/y28"
            android:layout_marginBottom="@dimen/y30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text18"
                android:textColor="@color/color_666666"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/et_alipay_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/my_cursor"
                android:maxLines="1"
                android:textColorHint="@color/color_999999"
                android:textColor="@color/color_999999"
                android:inputType="textPassword"
                android:textSize="10sp"
                android:hint="请输入资金密码"
                android:layout_marginLeft="@dimen/y22"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tv_forget_alipay_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text19"
                android:textColor="@color/color_ff5100"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/go_sell"
        android:text="出售"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/cl"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y32"
        android:gravity="center"
        android:textColor="@color/common_white"
        android:textSize="16sp"
        android:paddingBottom="@dimen/y10" />

</LinearLayout>