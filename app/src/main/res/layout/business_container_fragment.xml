<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ff_business_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ak"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用资产"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y84"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/y32"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_usedprotery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="0.00"
                    android:textColor="@color/white"
                    android:textSize="38sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cny"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/y10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/y42"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/y110">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="冻结："
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_dongjieprotery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2000"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cny"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ff_business_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y366"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_bg20s"
                android:layout_marginLeft="@dimen/y44"
                android:layout_marginRight="@dimen/y44"
                android:orientation="vertical">

                        <net.lucode.hackware.magicindicator.MagicIndicator
                            android:id="@+id/gusadan_magicindicator"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y92"
                            android:layout_gravity="center_horizontal"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@mipmap/l"
                    android:layout_marginLeft="@dimen/y30"
                    android:layout_marginRight="@dimen/y30"/>

            </LinearLayout>

            <aimi.android.com.ui.widget.NoScrollViewPager
                android:id="@+id/business_viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>