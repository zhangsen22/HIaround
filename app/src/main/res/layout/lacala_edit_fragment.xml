    <LinearLayout
        android:id="@+id/ll_forget_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/y26"
        android:paddingRight="@dimen/y26"
        android:layout_marginTop="@dimen/y38"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资金密码"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_forget_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textCursorDrawable="@drawable/my_cursor"
            android:maxLines="1"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/color_999999"
            android:inputType="textPassword"
            android:textSize="10sp"
            android:hint="请输入资金密码"
            android:layout_marginLeft="@dimen/y30"/>

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="@color/color_ff5100"
            android:textSize="10sp" />

    </LinearLayout>

    <TextView
