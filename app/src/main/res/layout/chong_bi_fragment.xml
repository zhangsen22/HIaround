<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/color_f9f9f9">

    <include layout="@layout/title"/>

    <include layout="@layout/line_10_f9"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/y26"
        android:paddingRight="@dimen/y26"
        android:gravity="center_vertical"
        android:background="@color/common_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USDT"
            android:textSize="12sp"
            android:textColor="@color/color_666666"
            android:gravity="center" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_bi_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择币种"
            android:textSize="12sp"
            android:textColor="@color/color_666666"
            android:gravity="center" />

        <ImageView
            android:layout_width="@dimen/y12"
            android:layout_height="@dimen/y20"
            android:src="@mipmap/y"
            android:layout_marginLeft="@dimen/y18"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/common_white"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="比特币网络"
        android:textSize="11sp"
        android:textColor="@color/color_666666"
        android:gravity="center"
        android:layout_marginTop="@dimen/y36"/>

    <ImageView
        android:id="@+id/tv_bizing_img"
        android:layout_width="@dimen/y296"
        android:layout_height="@dimen/y296"
        android:layout_marginTop="@dimen/y28" />

        <TextView
            android:id="@+id/tv_save_zing_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存二维码"
            android:textSize="14sp"
            android:textColor="@color/common_white"
            android:gravity="center"
            android:background="@mipmap/n"
            android:textIsSelectable="true"
            android:layout_marginTop="@dimen/y18"
            android:layout_marginBottom="@dimen/y18"/>

        <include layout="@layout/line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充币地址"
            android:textSize="11sp"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:layout_marginTop="@dimen/y26"/>

        <TextView
            android:id="@+id/tv_bi_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qwewefdgre98789745eq"
            android:textSize="11sp"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:layout_marginTop="@dimen/y26"/>

        <TextView
            android:id="@+id/tv_copybi_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制地址"
            android:textSize="14sp"
            android:textColor="@color/color_ff5100"
            android:background="@mipmap/bk"
            android:gravity="center"
            android:layout_marginTop="@dimen/y28"
            android:layout_marginBottom="@dimen/y30"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="·请勿向上述地址充值任何非USDT资产，否则资产将不可找回。\n·USDT充币仅支持simple send的方法，使用其他方法(send all的充币暂时无法到账)\n·您充值至上述地址后，需要整个网络节点的确认，1次网络确认后到账，6 次网络确认后可提币。\n·最小充值金额：1400  USDT,小于最小金额的充值将不会上账且无法退回.\n·您的充值地址不会经常改变，可以重复充值；如有更改，我们会尽量通过网站公告或邮件通知您。\n·请务必确认电脑及浏览器安全，防止信息被篡改或泄露。"
        android:textSize="10sp"
        android:textColor="@color/color_999999"
        android:layout_marginTop="@dimen/y34"
        android:layout_marginBottom="@dimen/y74"
        android:lineSpacingExtra="@dimen/y6"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/y26"
        android:layout_marginRight="@dimen/y26"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>